---
pageable: true
---

<section id="content">

<% page_articles.each do |article| %>
  <article class="post">
    <header>
      <h1><a href="<%= article.url %>"><%= article.title %></a></h1>
      <time datetime="<%= article.date %>"><%= article.date.strftime('%B %e, %Y') %></time>
    </header>

    <%= article.summary %>
  </article>
<% end %>

<% if prev_page || next_page %>
  <nav class="pagination">
    <% if prev_page %>
      <a href="<%= prev_page.url %>">Newer Posts</a>
    <% end %>
    <% if prev_page && next_page %> | <% end %>
    <% if next_page %>
      <a href="<%= next_page.url %>">Older Posts</a>
    <% end %>
  </nav>
<% end %>

</section>
